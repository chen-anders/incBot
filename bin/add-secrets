#!/bin/bash -e

AWS_REGION="$1"
SECRETS_MANAGER_KEY="$2"
SLACK_SIGNING_SECRET="$3"
SLACK_BOT_OAUTH_TOKEN="$4"

if [[ -z "${AWS_REGION}" ]] || [[ -z "${SECRETS_MANAGER_KEY}" ]] || [[ -z "${SLACK_SIGNING_SECRET}" ]] || [[ -z "${SLACK_BOT_OAUTH_TOKEN}" ]]; then
  echo "Usage: ./bin/add-secrets <AWS_REGION> <SECRETS_MANAGER_KEY> <SLACK_SIGNING_SECRET> <SLACK_BOT_OAUTH_TOKEN>"
fi

aws --region "${AWS_REGION}" secretsmanager create-secret --name "${SECRETS_MANAGER_KEY}" --secret-string '{"SLACK_SIGNING_SECRET":"'"$SLACK_SIGNING_SECRET"'","SLACK_BOT_OAUTH_TOKEN":"'"$SLACK_BOT_OAUTH_TOKEN"'"}'
